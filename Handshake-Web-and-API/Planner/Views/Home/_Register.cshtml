@{
    ViewBag.Title = "Register";
}
@model Planner.Models.DTO.Register

<div class="row">
    <h2>
        <i class="fa fa-pencil-square-o"></i>&nbsp;Register now for free!&nbsp;<small>No payment info or in-app adds-on!</small>
    </h2>
</div>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        @using (Html.BeginForm("Create", "Users", FormMethod.Post, new {@class = "form-horizontal"}))
        {
            <input type="text" class="form-control" placeholder="Full name" name="fullName"/>
            <br/>
            <input type="text" class="form-control" placeholder="Email address" name="email"/>
            <br/>
            <input type="password" class="form-control" placeholder="Password" name="password"/>
            <br/>
            <select name="Type" class="form-control">
                <option value="Applicant">Applicant</option>
                <option value="Recruiter">Recruiter</option>
            </select>
            <br/>
            <label for="resume">Give a link to your resume or LinkedIn page here: </label>
            <input type="text" class="form-control" name="resume" id="resume" placeholder="Resume">
            <br/>
            <label for="tagline">Insert your tagline here!</label>
            <input type="text" class="form-control" placeholder="Your tagline here" id="tagline" name="tagline" maxlength="80" required/>
            <br/>
            <button type="submit" class="btn btn-default">Register</button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}