<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.handshake.tommaso.handshake" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mini_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPage"
            android:label="@string/title_activity_main_page"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.handshake.tommaso.handshake.MainActivity" />
        </activity>
        <activity
            android:name=".tryOut"
            android:label="@string/title_activity_try_out"
            android:parentActivityName=".MainPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.handshake.tommaso.handshake.MainPage" />
        </activity>
        <activity
            android:name=".Connections"
            android:label="@string/title_activity_connections"
            android:parentActivityName=".MainPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.handshake.tommaso.handshake.MainPage" />
        </activity>
        <activity
            android:name=".Other"
            android:label="@string/title_activity_other"
            android:parentActivityName=".MainPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.handshake.tommaso.handshake.MainPage" />
        </activity>
        <activity
            android:name=".More"
            android:label="@string/title_activity_more"
            android:parentActivityName=".MainPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.handshake.tommaso.handshake.MainPage" />
        </activity>
    </application>

</manifest>
